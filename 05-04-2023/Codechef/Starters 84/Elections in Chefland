/* package codechef; // don't place package name! */

import java.util.*;
import java.lang.*;
import java.io.*;

/* Name of the class has to be "Main" only if the class is public. */
class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		// your code goes here
			Scanner sc = new Scanner (System.in);
		int T = sc.nextInt();
	   for(int j = 0 ; j < T ; j++) {
        int n = sc.nextInt(); // number of people in Chefland
        int x = sc.nextInt(); // minimum age required for voting
        int count = 0; // counter for eligible voters

        for (int i = 0; i < n; i++) {
            int age = sc.nextInt(); // age of the ith person
            if (age >= x) {
                count++; // increment counter if age is greater than or equal to x
            }
        }

        System.out.println(count); // output the count of eligible voters for the current test case
    }
    sc.close();
}

	}
